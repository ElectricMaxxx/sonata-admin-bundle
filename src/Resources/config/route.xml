<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="cmf_sonata_admin_integration.route.extension.route_referrers"
                class="Symfony\Cmf\Bundle\SonataAdminIntegrationBundle\Admin\Route\Extension\RouteReferrersExtension">
            <argument>%cmf_sonata_admin_integration.route.form_group%</argument>
            <tag name="sonata.admin.extension"/>
        </service>

        <service
                id="cmf_sonata_admin_integration.route.extension.frontend_link"
                class="Symfony\Cmf\Bundle\SonataAdminIntegrationBundle\Admin\Route\Extension\FrontendLinkExtension">
            <tag name="sonata.admin.extension"/>
            <argument type="service" id="cmf_routing.router"/>
            <argument type="service" id="translator"/>
        </service>
    </services>
</container>
