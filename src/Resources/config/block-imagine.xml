<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service
                id="cmf_sonata_phpcr_admin_integration.block.imagine.slideshow_admin"
                class="Symfony\Cmf\Bundle\SonataPhpcrAdminIntegrationBundle\Admin\Block\Imagine\SlideshowBlockAdmin"
                parent="cmf_sonata_phpcr_admin_integration.abstract_admin">
            <tag
                    name="sonata.admin"
                    manager_type="doctrine_phpcr"
                    group="dashboard.cmf"
                    label_catalogue="CmfBlockBundle"
                    label="dashboard.label_slideshow_block"
                    label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\SlideshowBlock</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setEmbeddedSlidesAdmin">
                <argument>cmf_sonata_admin_integration.block.imagine.imagine_admin</argument>
            </call>

            <call method="setRootPath">
                <argument>%cmf_sonata_phpcr_admin_integration.block.persistence.basepath%</argument>
            </call>
        </service>

        <service
                id="cmf_sonata_phpcr_admin_integration.block.imagine.imagine_admin"
                class="Symfony\Cmf\Bundle\SonataPhpcrAdminIntegrationBundle\Admin\Block\Imagine\ImagineBlockAdmin"
                parent="cmf_sonata_phpcr_admin_integration.abstract_admin">
            <tag
                    name="sonata.admin"
                    manager_type="doctrine_phpcr"
                    group="dashboard.cmf"
                    label_catalogue="CmfBlockBundle"
                    label="dashboard.label_imagine_block"
                    label_translator_strategy="sonata.admin.label.strategy.underscore" />
            <argument/>
            <argument>Symfony\Cmf\Bundle\BlockBundle\Doctrine\Phpcr\ImagineBlock</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setRootPath">
                <argument>%cmf_sonata_phpcr_admin_integration.block.persistence.basepath%</argument>
            </call>
        </service>

    </services>
</container>
