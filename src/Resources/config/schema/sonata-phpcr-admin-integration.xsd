<?xml version="1.0" encoding="UTF-8" ?>
<xsd:schema xmlns="http://cmf.symfony.com/schema/dic/sonata-phpcr-admin-integration"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    targetNamespace="http://cmf.symfony.com/schema/dic/sonata-phpcr-admin-integration"
    elementFormDefault="qualified">

    <xsd:element name="config" type="config" />

    <xsd:complexType name="config">
        <xsd:sequence>
            <xsd:element name="bundles" type="bundles" minOccurs="0" maxOccurs="1" />
            <xsd:element name="ivory_ckeditor" type="ivory_ckeditor" minOccurs="0" maxOccurs="1" />
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="bundles">
        <xsd:sequence>
            <xsd:any minOccurs="0" processContents="skip" />
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="ivory_ckeditor">
        <xsd:attribute name="enabled" type="enabled" default="auto" />
        <xsd:attribute name="config_name" type="xsd:string"/>
    </xsd:complexType>

    <xsd:simpleType name="enabled">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="true"/>
            <xsd:enumeration value="false"/>
            <xsd:enumeration value="auto"/>
        </xsd:restriction>
    </xsd:simpleType>

</xsd:schema>
